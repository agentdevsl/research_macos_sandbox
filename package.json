{
  "name": "research-macos-sandbox",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "macOS sandbox research: BoxLite, libkrun, OrbStack comparison",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts",
    "benchmark": "pnpm --filter @sandbox/benchmark run benchmark",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@docker/node-sdk": "^0.0.17",
    "@types/dockerode": "^4.0.0",
    "dockerode": "^4.0.9"
  }
}
